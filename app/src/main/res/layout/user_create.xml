<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorArkaplan"
    tools:context=".UserCreateActivity">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="294dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:text="Yeni Kayıt"
        android:textAlignment="center"
        android:textColor="#fff"
        android:textSize="30dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="45dp"
        tools:layout_editor_absoluteY="86dp" />

    <Button
        android:id="@+id/createButton"
        android:layout_width="217dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/lastName"
        android:layout_alignRight="@+id/lastName"
        android:layout_alignParentTop="true"
        android:layout_marginTop="290dp"
        android:layout_marginEnd="2dp"
        android:layout_marginRight="2dp"
        android:text="OLUŞTUR" />

    <Button
        android:id="@+id/cancelButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/lastName"
        android:layout_alignLeft="@+id/lastName"
        android:layout_alignTop="@+id/createButton"
        android:layout_marginStart="-1dp"
        android:layout_marginLeft="-1dp"
        android:layout_marginEnd="27dp"
        android:layout_marginRight="27dp"
        android:layout_toStartOf="@+id/createButton"
        android:layout_toLeftOf="@+id/createButton"
        android:text="VAZGEÇ" />

    <EditText
        android:id="@+id/lastName"
        android:layout_width="330dp"
        android:layout_height="46dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="219dp"
        android:background="#fff"
        android:ems="10"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/firstName"
        android:layout_width="330dp"
        android:layout_height="46dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="152dp"
        android:background="#fff"
        android:ems="10"
        android:inputType="textPersonName" />
</RelativeLayout>