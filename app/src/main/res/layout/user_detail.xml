<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorArkaplan"
    tools:context=".UserDetailActivity">

    <Button
        android:id="@+id/updateButton"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/lastName"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="85dp"
        android:text="GÜNCELLE"
        android:layout_alignRight="@+id/lastName" />

    <Button
        android:id="@+id/deleteButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/lastName"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="27dp"
        android:layout_marginRight="27dp"
        android:layout_marginBottom="85dp"
        android:layout_toStartOf="@+id/updateButton"
        android:layout_toLeftOf="@+id/updateButton"
        android:text="SİL"
        android:layout_alignLeft="@+id/lastName" />

    <EditText
        android:id="@+id/lastName"
        android:layout_width="330dp"
        android:layout_height="46dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="158dp"
        android:background="#fff"
        android:ems="10"
        android:inputType="textPersonName" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="200dp"
        android:layout_height="167dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp"
        app:srcCompat="@mipmap/ic_launcher_round" />

    <EditText
        android:id="@+id/firstName"
        android:layout_width="330dp"
        android:layout_height="46dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="#fff"
        android:ems="10"
        android:inputType="textPersonName" />
</RelativeLayout>